<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash Screen Theme for Android 12+ with animation (Dark Mode) -->
    <style name="LaunchTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <!-- Android 12+ Splash Screen API -->
        <item name="android:windowSplashScreenBackground">@android:color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/eless</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/white</item>
        
        <!-- Fallback for older Android versions -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- Normal app theme -->
    <style name="NormalTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

</resources>
